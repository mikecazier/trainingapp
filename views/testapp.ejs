<% page = { 'title' : 'PAGE_TITLE', 'key': 'INDEX_PAGE_NAME'} %>
<% assets = {
    'css' : ['bootstrap.css', 'todo.css'],
    'js' : ['http://code.angularjs.org/angular-1.0.0rc3.min.js', 'http://documentcloud.github.com/underscore/underscore-min.js', 'todo.js']
} %>

<div ng-app style="padding-left: 20px;" ng-controller="TodoCtrl">
    <h2>Total Todos: {{getTotalTodos()}}</h2>
    <ul class="unstyled">
        <li ng-repeat="todo in todos">
            <input type="checkbox" ng-model="todo.done">
            <span class="labelpos done-{{todo.done}}">{{todo.text}}</span>
        </li>
    </ul>
    <form class="form-horizontal">
        <input type="text" ng-model="formTodoText" ng-model-instant>
        <button class="btn" ng-click="addTodo()">Add</button>
    </form>

    <button class="btn-large" ng-click="clearCompleted()">Clear Completed</button>
</div>

